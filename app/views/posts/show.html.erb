<div class="display-blog-post">
  <h1><%= @post.title %></h1>

  <p><%= @post.body %></p>

  <p>Written By: <strong><%= @post.user.name_display %></strong> on <%= formatted_date(@post.updated_at) %> <p>

  <div>
    <div class="show-edit">
      <%= button_to "Edit" , edit_post_path(@post) , method: :get %>
    </div>
    <div class="show-delete">
      <%= button_to "Delete", post_path(@post) , method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  </div>

  <div class="like">
    <%= render partial: "/likes/like" %>
  </div>

  <div class="star">
    <%= render partial: "stars/star" %>
  </div>

</div>

<h3>Add A Comment</h3>

<div class="comment_form">
  <%= render partial: "comments/form" %>
</div>

<hr>

<div class="comments">
  <% @post.comments.each do |comment| %>
    <%= render partial: "/comments/comment", locals: {comment: comment} %>
  <% end %>
<div>
