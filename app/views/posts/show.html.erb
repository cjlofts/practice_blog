<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<%= button_to "Edit" , edit_post_path(@post) , method: :get %>

<%= button_to "Delete", post_path(@post) , method: :delete, data: {confirm: "Are you sure?"} %>

<h2>Add A Comment</h2>

<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messeges.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%#= raise @post.inspect %>
<%= form_for @comment, url: post_comments_path(@post), :html => {:class => "form-horizontal"} do |c| %>
  <div class="form-group">
    <%= c.label :body, "Comment:", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= c.text_area :body, placeholder: "Write your comment here", class: "form-control", rows: "1" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= c.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<h3>Comments</h3>

<% @post.comments.each do |c| %>
  <p><%= c.body %></p>
  <%= link_to "Edit", edit_post_comment_path(@post, c) %>
  |
  <%= link_to "Delete", post_comment_path(@post, c), method: :delete, data: {confirm: "Are you sure?"} %>
  <hr>
<% end %>






