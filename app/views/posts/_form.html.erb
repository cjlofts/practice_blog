<%= simple_form_for @post, :html => {:class => "form-horizontal"}  do |post| %>

  <% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-group">
    <%= post.label :title, "Title:", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= post.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= post.label :body, "Body:", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= post.text_area :body, class: "form-control", rows:"4" %>
    </div>
  </div>
  <div class="checkbox-inline">
    <%= post.association :categories, as: :check_boxes %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= post.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
  <% end %>
